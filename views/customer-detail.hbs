<div class="px-4 pt-0 py-4 h-full flex flex-col gap-4">

    <div class="grid grid-cols-12 gap-6">
        <div class="col-span-3 bg-white p-4 rounded-md flex flex-col gap-y-6">
            <div class="flex flex-col gap-y-4 items-center px-3 py-2">
                <img width="160" height="160" class="rounded-full object-cover"
                    src="https://png.pngtree.com/png-vector/20190710/ourlarge/pngtree-user-vector-avatar-png-image_1541962.jpg" />
                <span class="text-gray-500 text-xl">{{customer.fullName}}</span>
            </div>
            <div class="flex flex-col gap-y-4">
                <div class="flex flex-col gap-y-2 items-start">
                    <span class="font-semibold">Số điện thoại</span>
                    <span>{{customer.phoneNumber}}</span>
                </div>
                <div class="flex flex-col gap-y-2 items-start">
                    <span class="font-semibold">Địa chỉ</span>
                    <span>{{customer.address}}</span>
                </div>
            </div>
        </div>
        <div class="col-span-9">
            <div class="bg-white p-4 rounded-md flex flex-col gap-y-6">
                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-x-2">
                        <i class="ti-user font-bold text-xl text-primary mb-1"></i>
                        <span class="text-lg font-semibold">Các đơn hàng đã mua</span>
                    </div>

                </div>

                {{#if isEmpty}}
                <div class="flex flex-col gap-y-2 items-center justify-center h-full">
                    <img width="50%" src="/images/system/empty-data.png" />
                    <a href="/" class="bg-primary text-white py-1 px-3 rounded-md">Quay lại trang chủ</a>
                </div>
                {{else}}
                <table class="w-full text-sm text-left rtl:text-right text-gray-500">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3">
                                Mã đơn hàng
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Ngày mua hàng
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Tổng tiền
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Thao tác
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each orders}}
                        <tr class="bg-white border-b hover:bg-gray-50">
                            <td class="px-6 py-4">{{id}}</td>
                            <td class="px-6 py-4">{{orderDate}}</td>
                            <td class="px-6 py-4">{{totalAmount}}</td>
                            <td class="flex items-center px-6 py-4">
                                <a href="/orders/{{id}}"
                                    class="bg-sky-500 hover:bg-sky-700 text-white font-medium py-1 px-2 rounded-md">
                                    Chi tiết
                                </a>
                            </td>
                        </tr>

                        {{/each}}

                    </tbody>
                </table>
                {{/if}}
            </div>
        </div>

    </div>
</div>