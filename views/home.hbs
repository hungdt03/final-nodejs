<div class="grid grid-cols-4 gap-6 px-10 pt-4 py-8">

    {{#each products}}
    <div id="product-item" class="p-3 bg-white rounded-md shadow-sm relative">
        <div class="flex justify-center">
            <img class="rounded-lg object-cover w-[150px] h-[150px]" src="/images/product/{{thumbnail}}"
                alt="Ảnh minh họa" />
        </div>
        <div class="flex flex-col items-start gap-y-2 mt-3">
            <p class="text-lg font-semibold">{{name}}</p>
            <p class="text-sm text-gray-400">Mô tả ngắn về sản phẩm</p>
            <p class="font-semibold text-primary">{{retailPrice}}</p>
        </div>

        <a id="cart-product" href="#" class="absolute top-2 right-2 bg-gray-100 p-2 rounded-lg flex justify-center">
            <img width="20" height="20" src="/svg/cart-svg-com.svg" />
        </a>

        <div id="btn-product" class="absolute right-2 bottom-2 flex items-center gap-x-2">
            <a href="#" class="bg-gray-100 p-1 rounded-lg flex justify-center">
                <img width="16" height="16" src="/svg/minus-svg-com.svg" />
            </a>
            <span class="text-[14px]">1</span>
            <a href="#" class="bg-gray-100 p-1 rounded-lg flex justify-center">
                <img width="16" height="16" src="/svg/plus-svg-com.svg" />
            </a>
        </div>
    </div>
    {{/each}}

</div>