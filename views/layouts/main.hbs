<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/fonts/themify-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://cdn.tailwindcss.com"></script>

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        clifford: '#da373d',
                        // primary: 'orange'
                        primary: 'orange'
                    }
                }
            }
        }
    </script>

    <style>
        /* CSS cho hiệu ứng loading */
        #loading {
            position: fixed;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            z-index: 9999;
            display: none;
        }

        .loading-spinner {
            border: 16px solid #f3f3f3;
            border-radius: 50%;
            border-top: 16px solid #3498db;
            width: 120px;
            height: 120px;
            animation: spin 2s linear infinite;
        }

        #loading.fade-in {
            opacity: 0;
            transition: opacity 0.5s ease-in;
        }

        #loading.show {
            opacity: 1;
        }

        #loading.fade-out {
            opacity: 1;
            transition: opacity 0.5s ease-out;
        }

        #loading.fade-out.show {
            opacity: 0;
        }

        @keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }
    </style>
    <title>Bán hàng</title>
</head>

<body>
    <div class="flex justify-between w-full h-screen">
        {{> sidebar}}
        <div class="bg-slate-50 w-full flex flex-col gap-y-4 overflow-y-auto custom-scrollbar scrollbar-w-2">
            {{> header}}

            {{!-- CONTENT BODY --}}
            {{{body}}}
        </div>
    </div>

    <div id="loading">
        <div class="loading-spinner"></div>
    </div>

</body>

<script>
    document.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', function (e) {
            const loading = document.getElementById('loading');
            loading.classList.add('show');
            setTimeout(() => {
                loading.classList.remove('show');
            }, 1000); // Hiệu ứng mờ đi sau 1 giây
        });
    });
</script>
<script src="/js/main.js"></script>
<script src="/js/modal.js"></script>

</html>