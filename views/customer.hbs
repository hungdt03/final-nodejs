<div class="px-4 pt-0 py-4 h-full flex flex-col gap-4">
    <div class="bg-white p-4 rounded-md flex flex-col gap-y-6">
        <div class="flex items-center justify-between">
            <div class="flex items-center gap-x-2">
                <i class="ti-user font-bold text-xl text-primary mb-1"></i>
                <span class="text-lg font-semibold">Danh sách khách hàng</span>
            </div>

            <button class="text-primary text-sm bg-orange-50 px-3 py-1 rounded-lg">Xem thêm</button>
        </div>
        <table class="w-full text-sm text-left rtl:text-right text-gray-500">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        Họ và tên
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Số điện thoại
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Địa chỉ
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Thao tác
                    </th>
                </tr>
            </thead>
            <tbody>
                {{#each customers}}
                <tr class="bg-white border-b hover:bg-gray-50">

                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
                        {{fullName}}
                    </th>
                    <td class="px-6 py-4">{{phoneNumber}}</td>
                    <td class="px-6 py-4">{{address}}</td>
                    <td class="px-6 py-4">
                        <a href="/customers/{{_id}}"
                            class="bg-sky-500 hover:bg-sky-700 text-white font-medium py-1 px-2 rounded-md">
                            Chi tiết
                        </a>
                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>

    </div>