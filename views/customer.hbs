<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
<script>
    var pieOptions = {
        series: [44, 55],
        chart: {
            width: '350',
            type: 'donut',
        },
        plotOptions: {
            pie: {
                startAngle: -90,
                endAngle: 270
            }
        },
        labels: ['Khách hàng mới', 'Khách hàng cũ'],
        dataLabels: {
            enabled: false
        },
        fill: {
            type: 'gradient',
        },
        legend: {
            position: 'bottom', // Chuyển vị trí chú thích lên trên
            // formatter: function (val, opts) {
            //     return val + " - " + opts.w.globals.series[opts.seriesIndex];
            // }

        },
        title: {
        },
        responsive: [{
            breakpoint: 480,
            options: {
                chart: {
                    width: 200,
                },
                legend: {
                    position: 'top' // Chú thích vẫn ở trên khi màn hình nhỏ
                }
            }
        }]
    };

    var pieChart = new ApexCharts(document.querySelector("#pie-chart"), pieOptions);
    pieChart.render();
</script>